#!/bin/sh /etc/rc.common

START=98

SERVICE_PID_FILE=/var/run/awa_bootstrapd.pid
BINARY=/usr/bin/awa_bootstrapd
LOGFILE=/var/log/awa_bootstrapd
#LOCAL_CONFIG=/etc/lwm2m/contiki.bsc
LOCAL_CONFIG=/root/bootstrap.conf
FLOW_CONFIG=/etc/lwm2m/contiki-flow-NAT64.bsc
PORT=15683

apply_global_settings() {
	. /etc/config/awalwm2m
}

start() {
	sleep 5
	apply_global_settings
	start-stop-daemon -m -S -p $SERVICE_PID_FILE -b -x $BINARY -- -l $LOGFILE --interface $INTERFACE --addressFamily $ADDRESS_FAMILY --port $PORT --config $LOCAL_CONFIG $VERBOSE #--config $FLOW_CONFIG
}

stop() {
	start-stop-daemon -K -p $SERVICE_PID_FILE -s 15
	rm -f $SERVICE_PID_FILE
}
